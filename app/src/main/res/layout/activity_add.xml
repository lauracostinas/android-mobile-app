        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yearEditText"
        android:textAlignment="center"
        android:hint="Year"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Genres"
        android:textSize="20sp" />

